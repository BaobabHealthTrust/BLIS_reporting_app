
<style>
.subnav  {
  display: none !important;
}

.front-card {
  height: 328px;
  margin: -154px 0px 0px -418px;
  top: 150px;
  width: 838px;
  left: 50%;
  position: relative;
  color: #333333;
  vertical-align: baseline;
  padding: 0px;
  font: inherit;
}

.front-random-image-city-balcony .front-welcome {
  border-radius: 6px 6px 6px 6px;
}

.front-welcome {
  display: table;                                                               
  width: 837px;                                                                 
  height: 380px;                                                                
  margin: 0px auto;                                                             
  vertical-align: baseline;                                                     
  top: 10px;
}

body { 
  background: url('/assets/login.jpg') no-repeat center center fixed transparent;
  -moz-background-size: cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
} 

.front-signin {
  height: 118px;
  left: 565px;
  position: absolute;
  top: 25px;
  width: 233px;
  border: 1px;
  border-style: solid;
  border-radius: 14px 14px 14px 14px;
  background-color: transparent; /* D5D5D5;*/
  border-color: #D5D5D5;
}

